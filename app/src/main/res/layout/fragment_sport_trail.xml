<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37343d"
    tools:context="com.amsu.intelligentinsole.fragment.SportTrailFragment">

    <com.amsu.intelligentinsole.bean.MyMapView
        android:id="@+id/mv_finish_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1300" >
    </com.amsu.intelligentinsole.bean.MyMapView>

    <RadioGroup
        android:id="@+id/gv_finish_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_finish_oringinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="原始轨迹" />

            <View
                android:layout_width="15dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:background="#0000FF"
                android:paddingLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_finish_grasp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轨迹纠偏" />

            <View
                android:layout_width="15dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/grasp_flag"
                android:paddingLeft="15dp" >
            </View>
        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y254"
        android:layout_below="@+id/mv_finish_map">

        <TextView
            android:id="@+id/tv_finish_mileage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x36"
            android:text="0:00"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x168"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_finish_mileage"
            android:layout_marginLeft="@dimen/x24"
            android:text="km"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x32"/>
        <View
            android:id="@+id/view"
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/x100"
            android:layout_marginLeft="@dimen/x48"
            android:background="#969598"
            android:layout_gravity="center_vertical"></View>

        <LinearLayout
            android:id="@+id/ll_finish_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00:00"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/x48"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_finish_time"
                    android:layout_marginTop="@dimen/y20"
                    android:text="用时"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/x32"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_finish_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0'0''"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/x48"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_finish_speed"
                    android:layout_marginTop="@dimen/y20"
                    android:text="配速"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/x32"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_finish_consume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/x48"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_finish_consume"
                    android:layout_marginTop="@dimen/y20"
                    android:text="消耗"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/x32"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>





    </LinearLayout>

</RelativeLayout>
