<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dashboardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amsu.intelligentinsole.activity.HomeActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.amsu.intelligentinsole.activity.HomeActivity">

        <include layout="@layout/base_activity_head"
            android:id="@+id/rl_base_head"></include>

        <RelativeLayout
            android:id="@+id/rl_home_r1"
            android:layout_width="@dimen/x691"
            android:layout_height="@dimen/y691"
            android:layout_below="@+id/rl_base_head"
            android:layout_marginTop="@dimen/y120"
            android:layout_centerHorizontal="true">
            <com.amsu.intelligentinsole.view.CircleRingView
                android:id="@+id/vr_home_ring"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                dashboardview:circlering_width="@dimen/x76"/>
            <RelativeLayout
                android:layout_width="@dimen/x452"
                android:layout_height="@dimen/y452"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_rl_write_center">
                <TextView
                    android:id="@+id/tv_home_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/x128"
                    android:textColor="#3b3b3b"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_home_mileage"
                    android:text="里程/KM"
                    android:textSize="@dimen/x48"
                    android:textColor="#b9b9b9"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_home_mileage"
                    android:text="均速：0"
                    android:textSize="@dimen/x48"
                    android:textColor="#b9b9b9"
                    android:layout_marginTop="@dimen/y10"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_home_mails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动0公里"
            android:layout_below="@+id/rl_home_r1"
            android:layout_marginTop="@dimen/x140"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/ll_home_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y72"
            android:layout_below="@+id/tv_home_mails">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_home_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/x116"
                    android:textColor="#3b3b3b"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_home_distance"
                    android:text="距离：公里"
                    android:textSize="@dimen/x48"
                    android:textColor="#b9b9b9"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_home_heat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/x116"
                    android:textColor="#3b3b3b"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_home_heat"
                    android:text="热量：千卡"
                    android:textSize="@dimen/x48"
                    android:textColor="#b9b9b9"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_home_pace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0'00''"
                    android:textSize="@dimen/x116"
                    android:textColor="#3b3b3b"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_home_pace"
                    android:text="配速：分钟"
                    android:textSize="@dimen/x48"
                    android:textColor="#b9b9b9"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <!--android:layout_below="@+id/ll_home_l1"-->
        <RelativeLayout
            android:id="@+id/rl_home_r2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y128"
            android:layout_marginTop="@dimen/y128"
            android:layout_below="@+id/ll_home_l1">
            <ImageView
                android:id="@+id/iv_home_icon"
                android:layout_width="@dimen/x93"
                android:layout_height="@dimen/y93"
                android:src="@drawable/tqxjl_icon"
                android:layout_marginLeft="@dimen/x28"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_home_icon"
                android:layout_marginLeft="@dimen/x24"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_home_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="深圳市龙华新区"
                    android:textColor="#3b3b3b"
                    android:textSize="@dimen/x40"
                    />
                <TextView
                    android:id="@+id/tv_home_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_home_region"
                    android:layout_marginTop="@dimen/x16"
                    android:text="19℃"
                    android:textColor="#b9b9b9"
                    android:textSize="@dimen/x36"/>
                <TextView
                    android:id="@+id/tv_home_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_home_region"
                    android:layout_toRightOf="@+id/tv_home_temperature"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x16"
                    android:text="湿度：54%"
                    android:textColor="#b9b9b9"
                    android:textSize="@dimen/x36"/>
                <TextView
                    android:id="@+id/tv_home_airquality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_home_region"
                    android:layout_toRightOf="@+id/tv_home_humidity"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x16"
                    android:text="空气质量：35"
                    android:textColor="#b9b9b9"
                    android:textSize="@dimen/x36"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_home_region"
                    android:layout_toRightOf="@+id/tv_home_airquality"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/x16"
                    android:text="优"
                    android:textColor="#abe39a"
                    android:textSize="@dimen/x36"/>
            </RelativeLayout>

        </RelativeLayout>

        <com.amap.api.maps2d.MapView
            android:id="@+id/mv_home_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y461"
            android:layout_below="@+id/rl_home_r2"
            android:layout_marginRight="@dimen/x26"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginBottom="@dimen/x20"/>


    </RelativeLayout>
</ScrollView>

