<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sport_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#37343d"
    tools:context="com.amsu.intelligentinsole.activity.SportFinishActivity">

    <include layout="@layout/base_activity_head"
        android:id="@+id/rl_base_head"></include>

    <LinearLayout
        android:id="@+id/ll_finish_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:orientation="horizontal"
        android:layout_below="@id/rl_base_head">
        <TextView
            android:id="@+id/tv_finish_trail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="轨迹"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="@dimen/x40"/>
        <TextView
            android:id="@+id/tv_finish_detial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="详情"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="@dimen/x40"/>
        <TextView
            android:id="@+id/tv_finish_foot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="脚部"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="@dimen/x40"/>
    </LinearLayout>
    <View
        android:id="@+id/v_finish_select"
        android:layout_width="@dimen/x360"
        android:layout_height="@dimen/x4"
        android:layout_below="@id/ll_finish_title"
        android:background="#ff7e00"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_finish_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_finish_select">
    </android.support.v4.view.ViewPager>


</RelativeLayout>
